        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFhello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="textBox" RenderTransformOrigin="0.468,0.472">
        <ListBox x:Name="peopleListBox" d:ItemsSource="{d:SampleData ItemCount=4}" SelectionChanged="ListBox_SelectionChanged"/>

        <Button Margin="26,352,642,10" Click="Button_Greeting">Greeting</Button>

    </Grid>
</Window>
